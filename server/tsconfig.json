{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "../dist",
      "rootDir": "..",
      "lib": ["es6"],
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,    
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true, 
    },
    "exclude": [
      "../node_modules"
    ],
    "include": [
      "**/*.ts"
    ]
  }